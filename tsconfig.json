{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "lib": ["es2017"],
    "module": "commonjs",
    "target": "es6",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": false,
    "useUnknownInCatchVariables": false,
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "node_modules",
    "index.ts",
    "package.json",
    "readme.md",
    "LICENSE",
    "CODE_OF_CONDUCT.md",
    "CONTRIBUTING.md",
    "CHANGELOG",
    "README.md"
  ],
  "exclude": ["node_modules", "e2e"]
}
